<div class="title">
  <h1>Longest Word</h1>
</div>

<div class="tiles">
  <% @letters.each do |letter| %>
    <div class="tile">
      <%= letter %>
    </div>
  <% end %>
</div>

<div class="answer">
    <p>What's the longest word you can make?</p>
    <form action="/score" method="POST">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'letters', @letters.join %>
      <input class="input-word" type="text" name="word">
      <input class="btn-play" type="submit" value="Play">
    </form>
    <p>Current Total = <%= @total %></p>
    <p><%= link_to "Reset", new_path %></p>
</div>
